<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane"
           xmlns:fx="http://javafx.com/fxml"
           stylesheets="@login.css"
           fx:controller="org.habittracker.controllers.LoginController"
           prefHeight="1000.0" prefWidth="1000.0">

    <!-- Background particles will be added dynamically in controller -->

    <!-- Login Card -->
    <VBox fx:id="loginContainer" alignment="CENTER" spacing="15"
          styleClass="login-container" maxWidth="500" maxHeight="600">
        <Label text="Welcome Back to" styleClass="title"/>
        <Label text="Habit Tracker" styleClass="title"/>
        <TextField fx:id="usernameField" promptText="Enter Username"/>
        <PasswordField fx:id="passwordField" promptText="Enter Password"/>
        <Button text="Login" onAction="#handleLogin"/>

        <!-- Error Label -->
        <Label fx:id="errorLabel"/>

        <!-- NEW Buttons -->
        <Button fx:id="signupButton" text="Sign Up"/>
        <Button fx:id="homeButton" text="Home"/>
    </VBox>

</StackPane>
